@page
@model GuestBookRazorPages.Pages.FeedBackPageModel
@{
}
<div class="mainContainer">
    @if (HttpContext.Session.GetString("Login") != null)
    {
        <span class="badge badge-success" style="position: absolute ; left:160vh; max-width: 300px">Вы вошли под логином @(HttpContext.Session.GetString("Login")
        )</span>
    
    <a asp-page="./LogOut">
        <div class="form">
            <input class="login-button" type="button" asp-route-id="" value="Выход" style="position: absolute ; left:160vh; max-width: 300px">
        </div>
        </a>
    }
    else
    {
      
        <a asp-page="./Registration">
            <div class="form">
                <input class="login-button" type="button" asp-route-id="" value="Регистрация" style="position: absolute ; left:160vh; max-width: 300px">
            </div>
        </a>
        <a asp-page="./Login">
            <div class="form">
                <input class="login-button" type="button" asp-route-id="" value="Авторизация" style="position: absolute ; left:160vh; top: 10vh; max-width: 300px">
            </div>
        </a>
    }
    <div class="messageBox" >
    @foreach (var el in Model.messages)
    {
        <div class="quote">
            <p><span>@el.msg
            </span></p>
        
        <div class="persona">
            <div class="photo"><img class="img-circle img-thumbnail" src="https://bootstraptema.ru/snippets/icons/2016/mia/2.png" alt="" /></div>
            <p>@el.Us.Login</p>
            <p>@el.date.ToString()</p>
        </div>

    </div>
  
    }





</div>
    @if(HttpContext.Session.GetString("Login") != null)
    {
       <div class="inputBoxMessage">
        <form action="" class="form" method="post">
            <input required="" class="input" type="text" name="message" placeholder="Введите отзыв">
            <input class="login-button" type="submit" value="Отправить">

        </form>
        </div>
    }
</div>


